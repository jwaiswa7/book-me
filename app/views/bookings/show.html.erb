<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @booking %>

    <%= link_to 'Edit this booking', edit_booking_path(@booking), class: "btn btn-primary" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this booking', booking_path(@booking), method: :delete, class: "btn btn-danger" %>
    </div>
    <%= link_to 'Back to bookings', bookings_path, class: "btn btn-primary" %>
  </div>
</div>
