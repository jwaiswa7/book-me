<div class=" w-full bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
    <%= f.label :email, class: "block text-grey-darker text-sm font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker", placeholder: "Email" %>
    </div>
    <div class="mb-6">
      <%= f.label :password, class: "block text-grey-darker text-sm font-bold mb-2" %>
      <%= f.password_field :password, class: "shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "btn" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>